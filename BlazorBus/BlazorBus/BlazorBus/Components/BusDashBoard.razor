@inherits BusDashBoardBase


<style>
    .bus-card {
        padding: 3px;
        margin: 5px;
    }
    .icon-size {
        max-height:7px;
        max-width: 7px;
    }
    .icon-button {
        padding: 0px;
        display: grid;
    }
    i {
        font-size: 40px;
        align-self: center;
    }

    
    .wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;

    }
    .name {
        grid-area: name;
    }
    .freq {
        grid-area: freq;
    }
    .mode {
        grid-area: mode;
    }
    .locked {
        grid-area: locked
    }
    .bus-wrapper {
        display: grid;
        grid-gap: 10px;
        grid-template-areas: 
            "name            locked"
            "freq            mode";
    }

    .radio-color {
        background-color: red;
    }
    .active {
        background-color: lightgreen;
    }
    .inActive {
        background-color: orangered;
    }
</style>

<h3>HamBus DashBoard </h3>
<div class="wrapper">
    @foreach (var bus in BusService.BusModelList)
    {
    <div class="bus-wrapper bus-card @GetClass(bus.ActiveBus.IsActive) " OnClick="Change" style="@StyleToRender">
        <div class="name">Name: @bus.Name</div>

        <MatIconButton Class="locked icon-button" Icon="lock_open"
                       ToggleIcon="lock" ToggledChanged="((toggleState) => LockClick(toggleState, bus))"></MatIconButton>

        <div class="freq">Frequency: @FormatFreq(bus) Mhz</div>
        <div class="mode">Mode: @bus.State.Mode</div>
    </div>
    }

</div>

